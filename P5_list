using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace P5_List
{
    internal class Program
    {
        static void Main(string[] args)
        {
            List<double> grades = new List<double>();
            string answer;

            // input
            do
            {
                Console.WriteLine("Please input your grade:");
                grades.Add(Convert.ToDouble(Console.ReadLine()));

                Console.WriteLine("Do you want to input another grade? (yes/no)");
                answer = Console.ReadLine();

            } while (answer.ToLower()[0] != 'n'); // use single quotes bc you identify a single variable

            // process and output
            double totalGrade = 0;
            foreach(double grade in grades)
            {
                totalGrade += grade;
            }

            // this is equivalent to foreach loop
            /*
            for (int i = 0; i < grades.Count; i++)
            {
                totalGrade = grades[i];
            }
            */

            double average = totalGrade / grades.Count;
            Console.WriteLine($"Your grade average is {average.ToString("N2")}");



            Console.ReadKey();
        }
    }
}
